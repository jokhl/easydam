<div class="w-1/4">
  <%= image_tag "logo.png", class: "w-3/12 mx-auto" %>

  <h1 class="mt-6 text-center text-2xl text-gray-100 font-light">
    Sign in to easyDAM
  </h1>

  <%= form_for @user_session, url: login_path, method: :post do |f| %>

    <div class="w-2/3 mt-4 mx-auto">
      <%= f.text_field :login, placeholder: "Username", class: "w-full py-3 px-4 bg-white border rounded-t-md outline-none focus:ring-2 ring-pink-500" %>
      <%= f.password_field :password, placeholder: "Password", class: "w-full py-3 px-4 bg-white border-r border-b border-l rounded-b-md outline-none focus:ring-2 ring-pink-500" %>
    </div>

    <div class="mt-6 text-center">
      <%= f.button do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" style="fill:rgba(243, 244, 246, 1);transform:;-ms-filter:"><path d="M11.999,1.993c-5.514,0.001-10,4.487-10,10.001s4.486,10,10.001,10c5.513,0,9.999-4.486,10-10 C22,6.48,17.514,1.994,11.999,1.993z M12,19.994c-4.412,0-8.001-3.589-8.001-8s3.589-8,8-8.001C16.411,3.994,20,7.583,20,11.994 C19.999,16.405,16.41,19.994,12,19.994z"></path><path d="M12 10.994L8 10.994 8 12.994 12 12.994 12 16 16.005 11.995 12 7.991z"></path></svg>
      <% end %>
    </div>

  <% end %>
</div>
